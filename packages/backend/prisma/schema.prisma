// Prisma schema for Trackly

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed with bcrypt
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags      Tag[]
  entries   Entry[]

  @@index([email])
}

model Tag {
  id         String   @id @default(cuid())
  name       String
  type       String
  categories String[] // PostgreSQL array
  valueType  String?
  options    Json?    // Store as JSONB
  properties Json?    // Store as JSONB
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  entryTags  EntryTag[]

  @@index([userId])
  @@index([name])
  @@map("Entity")
}

model EntryTag {
  id        String   @id @default(cuid())
  entryId   String
  tagId     String
  createdAt DateTime @default(now())

  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([entryId, tagId])
  @@index([entryId])
  @@index([tagId])
}

model Entry {
  id           String   @id @default(cuid())
  title        String   @default("") // Mandatory title for the entry
  timestamp    DateTime
  value        String?
  valueDisplay String?
  notes        String?
  latitude     Float?   // Location latitude
  longitude    Float?   // Location longitude
  locationName String?  // Optional location name (e.g., "San Francisco, CA")
  hashtags     String[] @default([]) @map("tags") // Extracted hashtags for querying
  ipoCategory  String?  // IPO category: 'input', 'process', or 'output'
  isArchived   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  entryTags    EntryTag[]

  @@index([userId])
  @@index([timestamp])
  @@index([isArchived])
}
